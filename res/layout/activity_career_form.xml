<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="android.webteklabs.CareerForm">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ftv1"
        android:text="Name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ftv2"
        android:layout_below="@+id/ftv1"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ftv3"
        android:layout_below="@+id/ftv2"
        android:layout_marginTop="20dp"
        android:text="Mobile"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ftv4"
        android:layout_below="@+id/ftv3"
        android:layout_marginTop="20dp"
        android:text="Address"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ftv5"
        android:layout_below="@+id/ftv4"
        android:layout_marginTop="20dp"
        android:text="State"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ftv6"
        android:layout_below="@+id/ftv5"
        android:layout_marginTop="20dp"
        android:text="City"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ftv7"
        android:layout_below="@+id/ftv6"
        android:layout_marginTop="20dp"
        android:text="Subject"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ftv8"
        android:layout_below="@+id/ftv7"
        android:layout_marginTop="20dp"
        android:text="Your Enquiry"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="First and last Name"
        android:id="@+id/fet1"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/ftv1"
        android:layout_toEndOf="@+id/ftv8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="example@domain.com"
        android:id="@+id/fet2"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/ftv2"
        android:layout_toEndOf="@+id/ftv8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Mobile Number"
        android:id="@+id/fet3"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/ftv3"
        android:layout_toEndOf="@+id/ftv8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="Address"
        android:id="@+id/fet4"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/ftv4"
        android:layout_toEndOf="@+id/ftv8" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:transitionName="State"
        android:id="@+id/fsp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/ftv5"
        android:layout_toEndOf="@+id/ftv8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="City"
        android:id="@+id/fet6"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/ftv6"
        android:layout_toEndOf="@+id/ftv8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Subject"
        android:id="@+id/fet7"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/ftv7"
        android:layout_toEndOf="@+id/ftv8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:id="@+id/fet8"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/ftv8"
        android:layout_toEndOf="@+id/ftv8" />

    <Button
        android:id="@+id/fbt"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/ftv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:text="Submit"/>
    </RelativeLayout>

</ScrollView>
